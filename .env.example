# Package Tracking System Configuration
# Copy this file to .env and configure as needed

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8080
DB_PATH=./database.db

# Feature Configuration
UPDATE_INTERVAL=1h
LOG_LEVEL=info

# Development/Testing Flags
DISABLE_RATE_LIMIT=false

# Carrier API Keys (Optional - system works without them)
# USPS Configuration
# USPS_API_KEY=your_usps_api_key

# UPS Configuration  
# UPS_API_KEY=your_ups_api_key

# FedEx Configuration (OAuth 2.0)
# FEDEX_API_KEY=your_fedex_client_id
# FEDEX_SECRET_KEY=your_fedex_client_secret
# FEDEX_API_URL=https://apis.fedex.com (default: production, use https://apis-sandbox.fedex.com for testing)

# DHL Configuration
# DHL_API_KEY=your_dhl_api_key

# CLI Configuration
PACKAGE_TRACKER_SERVER=http://localhost:8080
PACKAGE_TRACKER_FORMAT=table
PACKAGE_TRACKER_QUIET=false

# Email Tracker Configuration
# Gmail OAuth2 credentials (required for email processing)
# GMAIL_CLIENT_ID=your_gmail_client_id
# GMAIL_CLIENT_SECRET=your_gmail_client_secret
# GMAIL_REFRESH_TOKEN=your_gmail_refresh_token

# Email processing settings
# EMAIL_API_URL=http://localhost:8080
# EMAIL_CHECK_INTERVAL=5m
# EMAIL_DRY_RUN=false
# EMAIL_STATE_DB_PATH=./email-state.db
# GMAIL_SEARCH_QUERY=from:(ups.com OR usps.com OR fedex.com OR dhl.com)